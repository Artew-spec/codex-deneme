{% schema %}
{
  "name": "Small Group",
  "tag": "section",
  "class": "small-group-section",
  "settings": [
    {"type": "text", "id": "title", "label": "Title", "default": "Small Group"},
    {"type": "textarea", "id": "text", "label": "Description", "default": "Details about your small group sessions."},
    {"type": "image_picker", "id": "image", "label": "Image"}
  ],
  "presets": [
    {"name": "Small Group"}
  ]
}
{% endschema %}

<section id="small-group" class="small-group page-width">
  <div class="small-group__inner">
    {% if section.settings.image %}
      <div class="small-group__image">
        <img src="{{ section.settings.image | image_url: width: 800 }}" alt="{{ section.settings.title }}">
      </div>
    {% endif %}
    <div class="small-group__content">
      <h2>{{ section.settings.title }}</h2>
      <div class="rte">{{ section.settings.text }}</div>
    </div>
  </div>
</section>

<style>
.small-group { padding: 60px 0; }
.small-group__inner { display:flex; flex-wrap:wrap; gap:2rem; align-items:center; }
.small-group__image { flex:1 1 300px; }
.small-group__content { flex:1 1 300px; }
</style>
